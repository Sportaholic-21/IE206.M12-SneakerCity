<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../template/header.ejs'); -%>
  </head>
  <body>
    <div class="d-flex h-100">
      <div class="col-2 pl-0 h-100 w-25 fixed-top">
        <%- include('../../template/sidebar.ejs'); -%>
      </div>
      <div class="col-12 w-100 pr-0">
        <%- include('../../template/navbar.ejs'); -%>
        <div class="col-10 ml-auto">
          <div class="d-flex justify-content-between pt-3">
            <h1 class="text-primary text-uppercase">Add User</h1>
          </div>
          <hr />
          <div class="ml-2">
            <form
              enctype="application/x-www-form-urlencoded"
              class="needs-validation"
              method="POST"
              action="/admin/user/insert"
            >
              <div class="form-group row">
                <div class="col-sm-2">
                  <label>Image</label>
                </div>
                <div class="col-sm-5">
                  <input type="file" 
                         class="filepond" 
                         id="exampleFormControlFile1 usrImg" 
                         name="usrImg"
                  />
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label>Username</label>
                </div>
                <div class="col-sm-5">
                  <textarea class="form-control" id="username" name="username" rows="1"></textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label>Email:</label>
                </div>
                <div class="col-sm-5">
                  <textarea
                    class="form-control"
                    id="email"
                    name="email"
                    rows="1"
                    maxlength="250"
                  ></textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label>Full name:</label>
                </div>
                <div class="col-sm-5">
                  <textarea
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    rows="1"
                    maxlength="250"
                  ></textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label>Address:</label>
                </div>
                <div class="col-sm-5">
                  <textarea
                    class="form-control"
                    id="address"
                    name="address"
                    rows="3"
                    maxlength="250"
                  ></textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label>Phone:</label>
                </div>
                <div class="col-sm-5">
                  <textarea
                    class="form-control"
                    id="phone"
                    name="phone"
                    rows="1"
                    maxlength="250"
                  ></textarea>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-2">
                  <label>Role:</label>
                </div>
                <div class="col-sm-2">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="inlineRadioOptions"
                      id="inlineRadio1"
                      value="option1"
                    />
                    <label class="form-check-label" for="inlineRadio1"
                      >User</label
                    >
                  </div>
                  <div class="form-check form-check-inline">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="inlineRadioOptions"
                      id="inlineRadio2"
                      value="option2"
                    />
                    <label class="form-check-label" for="inlineRadio2"
                      >Admin</label
                    >
                  </div>
                </div>
              </div>
              <button class="btn btn-success pt-2 md-2">Add</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  <%- include('../../template/footer.ejs'); -%>
</html>
