  <%- include('../../template/footer.ejs'); -%>
  <script>
    $(document).on("click",".deleteOrderBtn", async function() {
      var id = $(this).data("id");
      await axios.post("/admin/api/order/"+id+"?_method=DELETE")
                  .then(function(res){
                    if(res.data == "success") window.location="/admin/orders";
                  })
    })
