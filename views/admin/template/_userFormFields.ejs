<div class="form-group row">
  <div class="col-sm-2">
    <label>Image:</label>
  </div>
  <div class="col-sm-5">
    <input type="file" class="form-control-file filepond" id="coverImage" name="coverImage" />
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <label>Username:</label>
  </div>
  <div class="col-sm-5">
    <textarea class="form-control" name="userName"id="desc" rows="1"></textarea>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <label>Email:</label>
  </div>
  <div class="col-sm-5">
    <textarea class="form-control" name="email" id="shortdesc" rows="1" maxlength="250"></textarea>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <label>Full name:</label>
  </div>
  <div class="col-sm-5">
    <textarea class="form-control" name="fullName" id="shortdesc" rows="1" maxlength="250"></textarea>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <label>Address:</label>
  </div>
  <div class="col-sm-5">
    <textarea class="form-control" id="shortdesc" rows="3" maxlength="250"></textarea>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <label>Phone:</label>
  </div>
  <div class="col-sm-5">
    <textarea class="form-control" name="phone" id="shortdesc" rows="1" maxlength="250"></textarea>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <label>Password:</label>
  </div>
  <div class="col-sm-5">
    <textarea class="form-control" name="password" id="shortdesc" rows="1" maxlength="250"></textarea>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <label>Role:</label>
  </div>
  <div class="col-sm-2">
    <div class="form-check">
      <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="0" />
      <label class="form-check-label" for="inlineRadio1">User</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="role" id="inlineRadio2" value="1" />
      <label class="form-check-label" for="inlineRadio2">Admin</label>
    </div>
  </div>
</div>