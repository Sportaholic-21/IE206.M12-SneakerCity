<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Image</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Full name</th>
        <th scope="col">Address</th>
        <th scope="col">Phone</th>
        <th scopr="col">Role</th>
        <th scopr="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <th scope="row">1</th>
        <td style="width: 20px">
          <img
            src="<%= user.avatarImagePath %>"
            alt="none"
            class="img-fluid"
          />
        </td>
        <td><%= user.userName %></td>
        <td><%= user.email %></td>
        <td><%= user.fullName %></td>
        <td>District here</td>
        <td><%= user.phone %></td>
        <td class="text-primary">
          <% if (user.role == 1) { %> Admin <% } else { %> User <% } %>
        </td>
        <td>
          <button
            type="button"
            class="btn btn-danger deleteBtn"
            data-toggle="modal"
            data-target="#exampleModal"
            data-id="<%= user.id %>"
            data-name="<%= user.userName %>"
            data-link="user/"
          >
            Delete
          </button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>